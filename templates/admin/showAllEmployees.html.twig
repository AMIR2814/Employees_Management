{% extends ('base.html.twig') %}

{% block title %} اطلاعات پرسنلی {% endblock %}

{% block javaScript %}
    <!-- iCheck -->
    <script src="{{ asset('build/iCheck/icheck.min.js') }}"></script>
    <!-- Datatables -->
    <script src="{{ asset('build/datatables.net/js/jquery.dataTables.min.js') }}"></script>

    <script src="{{ asset('build/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>



    <script src="{{ asset('build/datatables.net-buttons-bs/js/buttons.bootstrap.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-buttons/js/buttons.flash.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-buttons/js/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-buttons/js/buttons.print.min.js') }}"></script>

    <script src="{{ asset('build/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-keytable/js/dataTables.keyTable.min.js') }}"></script>
    <script src="{{ asset('build/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>



    <script src="{{ asset('build/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>
    <script src="{{ asset('build/datatables.net-scroller/js/dataTables.scroller.min.js') }}"></script>
    <script src="{{ asset('build/jszip/dist/jszip.min.js') }}"></script>

    <script src="{{ asset('build/pdfmake/build/pdfmake.min.js') }}"></script>
    <script src="{{ asset('build/pdfmake/build/vfs_fonts.js') }}"></script>

{% endblock %}

{% block style %}
    <!-- iCheck -->
    <link href="{{ asset('build/iCheck/skins/flat/green.css') }}" rel="stylesheet">
    <!-- Datatables -->
    <link href="{{ asset('build/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('build/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('build/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('build/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('build/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block pageDescription %} اطلاعات کل پرسنل شهرداری و سازمان های تابعه {% endblock %}

{% block body %}
    <p class="text-muted font-13 m-b-30"></p>
    <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>نام خانوادگی - نام</th>
                <th>کدملی</th>
                <th>سازمان</th>
                <th>قرارداد</th>
                <th>واحد</th>
                <th>حقوق دهنده</th>
                <th>ساختمان</th>
                <th>بایگانی پرونده</th>
            </tr>
        </thead>
        <tbody>
            {% for employee in employees %}
                <tr>
                    <td><a href="{{ path('admin_employeeWithNationalCode', {'nationalCode': employee.nationalCode}) }}">{{ employee.lastName }} {{ employee.firstName }}</a></td>
                    <td>{{ employee.nationalCode }}</td>
                    <td>{{ employee.org.title }}</td>
                    <td>{{ employee.contractType.title }}</td>
                    <td>{{ employee.unit.title }}</td>
                    <td>{{ employee.sallaryOrg.title }}</td>
                    <td>{{ employee.building.title }}</td>
                    <td>{{ employee.archiveFileOrg.title }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
